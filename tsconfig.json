{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        //"outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/*",
                "src/types/*",
            ]
        },
        "lib": [
            "es2017"
        ]
    },
    "include": [
        "src/**/*",
    ]
}
